DROP DATABASE IF EXISTS aula;
CREATE DATABASE aula;
USE aula;

CREATE TABLE estado(
id INT AUTO_INCREMENT UNIQUE NOT NULL
,nome VARCHAR (100)NOT NULL UNIQUE
,sigla CHAR(2) NOT NULL UNIQUE 
,ativo CHAR (1) NOT NULL DEFAULT 'S'
,CONSTRAINT pk_estado PRIMARY KEY (id)
);

CREATE TABLE cicade(
id INT AUTO_INCREMENT NOT NULL UNIQUE 
,nome VARCHAR (100) NOT NULL
,ativo CHAR(1) NOT NULL DEFAULT 'S'
,estado_id INT NOT NULL
,CONSTRAINT fk_estado FOREIGN KEY (estado_id) REFERENCES estado (id)
,CONSTRAINT cidade_unica UNIQUE (cidade,estado_id)
,CONSTRAINT pk_cidade PRIMARY KEY (id)
);


CREATE TABLE endereco (
id INT NOT NULL AUTO_INCREMENT UNIQUE 
,rua VARCHAR (100) NOT NULL
,numero CHAR (20) NOT NULL
,bairro VARCHAR (100) NOT NULL
,cidade_id INT NOT NULL
,CONSTRAINT fk_endereco  FOREIGN KEY (cidade_id) REFERENCES cidade (id) 

);



CREATE TABLE c_d (
id INT NOT NULL AUTO_INCREMENT UNIQUE
,nome VARCHAR (50) NOT NULL UNIQUE 
,cnpj VARCHAR (50) NOT NULL UNIQUE 
,endereco_id INT NOT NULL 
,CONSTRAINT fk_c_d FOREIGN KEY (endereco_id) REFERENCES endereco(id)
);

